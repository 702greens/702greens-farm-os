{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ],
  "env": {
    "CLAUDE_API_KEY": "@claude_api_key",
    "CLOSE_API_KEY": "@close_api_key",
    "DATABASE_URL": "@database_url",
    "YOUR_PHONE": "@your_phone"
  }
}
